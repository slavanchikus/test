@import "../../uikit/shared.styl";

.container
  display: flex
  flex-direction: column
  position: relative
  margin-top: 36px

.text
  font-size: 18px
  transition: opacity 0.3s ease 0s

.number
  composes: shared_number
  position: absolute
  top: -10px
  left: -55px

.disabled
  .text
    opacity: 0.6

@media (max-width: 550px)
  .text
    font-size: 16px

  .number
    display: none
