@font-face
  font-family: 'Shnobel'
  src: local('Shnobel Regular'), local('Shnobel-Regular'), url('../fonts/Shnobelregular.woff2') format('woff2'), url('../fonts/Shnobelregular.woff') format('woff'), url('../fonts/Shnobelregular.ttf') format('truetype')
  font-weight: 400
  font-style: normal

@font-face
  font-family: 'Open Sans'
  src: local('Open Sans'), local('OpenSans'), url('../fonts/opensans.woff2') format('woff2'), url('../fonts/opensans.woff') format('woff'), url('../fonts/opensans.ttf') format('truetype')
  font-weight: 400
  font-style: normal

.container
  width: 100%
  height: 100vh
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  position: relative
  background: url('../images/clouds.png') repeat
  background-size: cover
  font-family: "Open Sans"
  color: white

.logo
  position: absolute
  width: 139px
  height: 29px
  top: 30px
  left: 30px
  background: url('../images/logoBig.png') no-repeat

.content
  visibility: visible
  opacity: 1
  transition: opacity 0.3s ease 0s

.hided
  visibility: hidden
  opacity: 0

@media (max-width: 1600px)
  .container
    background-size: contain

@media (max-width: 550px)
  .logo
    top: 9px
    left: 9px
    width: 33px
    height: 33px
    background: url('../images/logoMin.png') no-repeat
