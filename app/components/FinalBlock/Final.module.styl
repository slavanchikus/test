.container
  width: 100%
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  position: fixed
  top: 0
  left: 0
  background: url('../../images/man.png') no-repeat
  background-position: center
  background-size: cover
  opacity: 1
  pointer-events: none
  transition: opacity 0.3s ease 0.3s

.text
  font-family: "Shnobel"
  text-align: center
  >div
    margin-bottom: 28px
    &:nth-child(1)
      position: relative
      font-size: 50px
      color: #7f4156
    &:nth-child(2)
      font-size: 50px
    &:nth-child(3)
      font-size: 100px
      margin-bottom: 0

.line
  margin: auto
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  width: 148px
  height: 4px
  background: #7f4156

.hided
  opacity: 0

@media (max-width: 1370px)
  .container
    background: none
